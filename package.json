{
    "name": "@gelight/sml-client",
    "private": false,
    "version": "0.0.8",
    "description": "Simple Markup Language",
    "main": "dist/index.js",
    "unpkg": "releases/sml-client-$npm_package_version.min.js",
    "jsdelivr": "releases/sml-client-$npm_package_version.min.js",
    "browser": {
        "fs": false,
        "path": false,
        "os": false
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/GELight/sml-client.git"
    },
    "keywords": [
        "ReliableTxt",
        "WhitespaceSV",
        "SimpleML",
        "SML",
        "Simple",
        "Markup",
        "Language"
    ],
    "author": "Mario Linz",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/GELight/sml-client/issues"
    },
    "homepage": "https://github.com/GELight/sml-client#readme",
    "scripts": {
        "build": "tsc && node dist/index.js && npm run bundle",
        "bundle": "webpack --config webpack.config.js",
        "preversion" : "echo 'preversion' && npm run build",
        "version" : "echo 'version' && git add .",
        "postversion" : "echo 'postversion' && git push && git push --tags"
    },
    "dependencies": {
        "@gelight/sml": "^0.0.2"
    },
    "devDependencies": {
        "@types/node": "^14.14.27",
        "tslint": "^5.12.1",
        "typescript": "^3.3.3",
        "webpack": "^5.24.4",
        "webpack-cli": "^4.5.0"
    },
    "files": [
      "dist",
      "releases"
    ]
}
